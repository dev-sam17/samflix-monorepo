{
  "name": "samflix-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Samflix media server monorepo",
  "author": "Saurav Kumar",
  "license": "ISC",
  "scripts": {
    "dev": "turbo run dev",
    "dev:frontend": "turbo run dev --filter=@samflix/frontend",
    "dev:backend": "turbo run dev --filter=@samflix/backend",
    "start": "turbo run start --filter=@samflix/backend",
    "build": "turbo run build --summarize",
    "build:frontend": "turbo run build --filter=@samflix/frontend --summarize",
    "build:backend": "turbo run build --filter=@samflix/backend --summarize",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "overrides": {
      "typescript": "^5.9.3",
      "@types/node": "^22.15.23",
      "dotenv": "^16.5.0",
      "eslint": "^9.39.1",
      "prettier": "^3.6.2",
      "zod": "^4.0.14",
      "cross-env": "^7.0.3",
      "ts-node": "^10.9.2"
    }
  },
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.13.0"
  }
}